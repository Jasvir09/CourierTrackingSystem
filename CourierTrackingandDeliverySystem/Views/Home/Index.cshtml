@model dynamic

@{
    ViewData["Title"] = "Package Delivery Statistics";
}

<div class="container">
    <div class="stats-box">
        <h2>Package Delivery Stat</h2>

        <div class="stats-grid">
            <div class="stats-card">
                <h3>Total Delivered</h3>
                <p class="stats-number">@Model.TotalDelivered</p>
            </div>
            <div class="stats-card">
                <h3>Total In Transit</h3>
                <p class="stats-number">@Model.TotalInTransit</p>
            </div>
            <div class="stats-card">
                <h3>Total Pending</h3>
                <p class="stats-number">@Model.TotalPending</p>
            </div>
        </div>
    </div>
</div>

