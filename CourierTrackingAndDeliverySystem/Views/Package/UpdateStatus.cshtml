@model CourierTrackingAndDeliverySystem.Models.Package

@{
    ViewData["Title"] = "Update Package Status";
}

<h2>Update Package Status</h2>

<form asp-action="UpdateStatus" method="post">
    <input type="hidden" asp-for="PackageId" />

    <div class="form-group">
        <label asp-for="TrackingNumber">Tracking Number</label>
        <input asp-for="TrackingNumber" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="newStatus">New Status</label>
        <select id="newStatus" name="newStatus" class="form-control">
            @foreach (var status in ViewBag.StatusList as List<string>)
            {
                <option value="@status">@status</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update Status</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
